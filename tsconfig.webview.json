{
  "compilerOptions": {
    "target": "es6",
    "module": "es6",
    "strict": true,
    "noImplicitAny": true,
    "moduleResolution": "node",
    "outDir": "./out/webview",
    "rootDir": "./src",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "lib": ["es6", "dom"],
    "sourceMap": true
  },
  "include": ["src/webview/**/*.ts", "src/common/**/*.ts"],
  "exclude": ["node_modules"]
}